<h1>Wikis</h1>
<br>
<%= link_to "Create a New Wiki", new_wiki_path, class: 'btn btn-default' %>
<br><br>
<div class="row">
  <div class="col-md-8">
    <% if current_user.admin? || current_user.vip? %>
      <% @wikis.each do |wiki| %>
        <%= render partial: 'wiki', locals: { wiki: wiki } %>
      <% end %>
    <% else %>
      <% @wikis.each do |wiki| %>
        <% if wiki.user.email == current_user.email? %>
          <%= render partial: 'wiki', locals: { wiki: wiki } %>
          <% end %>
      <% end %>
    <% end %>
  </div>
</div>
